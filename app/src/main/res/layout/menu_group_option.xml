<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:layout_marginBottom="40dip"
        android:divider="#ffd9d9d9"
        android:dividerHeight="1px"/>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radiogroup_border"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/group_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombtn_pressed"
            android:layout_weight="1.0">

            <LinearLayout
                style="@style/bottom_button"
                android:background="@drawable/icon_group_option_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="新建"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombtn_pressed"
            android:layout_weight="1.0">

            <LinearLayout
                style="@style/bottom_button"
                android:background="@drawable/icon_group_option_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="编辑"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/group_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/icon_bottombtn_pressed"
            android:layout_weight="1.0">

            <LinearLayout
                style="@style/bottom_button"
                android:background="@drawable/icon_group_option_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="取消"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>